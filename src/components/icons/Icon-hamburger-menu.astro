---
const generalStyles =
  " block absolute h-1 w-full bg-neutral-800 rounded-lg left-0 opacity-100 rotate-0 duration-300 ease-in-out"
---

<div
  id='burger-menu'
  class='relative group z-30 burger-menu cursor-pointer w-10 h-6 rotate-0 duration-500 ease-in-out md:hidden'>
  <span
    class={"line-one top-0 group-[.open]:top-[18px] group-[.open]:rotate-[135deg]" + generalStyles}
  ></span>
  <span class={"line-two top-2/4 group-[.open]:opacity-0 group-[.open]:-left-16" + generalStyles}
  ></span>
  <span
    class={"line-three top-full group-[.open]:top-[18px] group-[.open]:rotate-[-135deg]" +
      generalStyles}></span>
</div>

<script>
  const burgerMenu = document.querySelector("#burger-menu") as HTMLDivElement

  burgerMenu.addEventListener("click", () => {
    burgerMenu.classList.toggle("open")
  })
</script>
