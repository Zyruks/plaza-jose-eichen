---
type Props = {
  title: string
  linkPrefix?: string
  link: string
  herf: string
  complementaryText?: string
}
const { title, link, href, complementaryText, linkPrefix } = Astro.props
let hidden: string
if (!complementaryText) {
  hidden = "hidden"
}
---

<div class='grid w-full content-start md:justify-self-start'>
  <h2 class='text-2xl font-bold'>{title}</h2>
  <a href={`${linkPrefix}${href}`} class='text-accent-400 text-lg underline underline-offset-4'
    >{link}</a
  >
  <p class={hidden}>{complementaryText}</p>
</div>
